<?xml version='1.0' encoding='utf-8'?>
<widget id="es.crsur.notimovil" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>NotiMovil</name>
    <description>
        Sistema de notificaciones y autorizaciones de CRSUR
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Caja Rural del Sur
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-targetSdkVersion" value ="19" />
		<config-file target="AndroidManifest.xml" parent="./application/service[@android:name='com.red_folder.phonegap.plugin.backgroundservice.NotiMovilService']/intent-filter/action[@android:name='com.red_folder.phonegap.plugin.backgroundservice.NotiMovilService']">
		</config-file>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
